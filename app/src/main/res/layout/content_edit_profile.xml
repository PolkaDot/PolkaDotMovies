<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/homebackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.polka.pdm.EditProfile"
    tools:showIn="@layout/activity_edit_profile">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserTextField"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailTextField"
        android:layout_gravity="right"
        android:hint="Email Address"
        android:layout_below="@+id/LastNameTextField"
        android:layout_alignStart="@+id/PhoneTextField"
        android:layout_alignEnd="@+id/FirstNameTextField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/FirstNameTextField"
        android:layout_gravity="right|top"
        android:hint="First Name"
        android:layout_below="@+id/PassTextField"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/PhoneTextField"
        android:layout_gravity="right"
        android:hint="Phone Number ;)"
        android:layout_below="@+id/EmailTextField"
        android:layout_alignStart="@+id/FirstNameTextField"
        android:layout_alignEnd="@+id/InterestsLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/Save"
        android:background="#bcae31"
        android:layout_marginBottom="53dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:onClick="onSavePress"
        android:textSize="25dp"
        android:layout_alignEnd="@+id/InterestsLabel"
        android:width="170dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MajorTextField"
        android:layout_gravity="right"
        android:hint="Major"
        android:layout_below="@+id/PhoneTextField"
        android:layout_alignStart="@+id/PhoneTextField"
        android:layout_alignEnd="@+id/InterestsLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/InterestsLabel"
        android:layout_gravity="left"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/Save"
        android:hint="Interests"
        android:layout_below="@+id/MajorTextField"
        android:gravity="top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PassTextField"
        android:layout_below="@+id/UserTextField"
        android:layout_alignParentEnd="true"
        android:hint="Password"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:onClick="onCancelPress"
        android:clickable="true"
        android:background="#bcae31"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/Save"
        android:layout_alignParentStart="true"
        android:width="170dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LastNameTextField"
        android:hint="Last Name"
        android:layout_below="@+id/FirstNameTextField"
        android:layout_alignStart="@+id/EmailTextField"
        android:layout_alignEnd="@+id/InterestsLabel" />
</RelativeLayout>
