<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/homebackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.polka.pdm.EditProfile"
    tools:showIn="@layout/activity_edit_profile">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserTextField"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/NameTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/emailLabel"
        android:textSize="35dp"
        android:layout_gravity="left"
        android:layout_below="@+id/NameTextField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailTextField"
        android:layout_alignTop="@+id/emailLabel"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/NameLabel"
        android:textSize="35dp"
        android:layout_gravity="left|top"
        android:layout_below="@+id/PassTextField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/NameTextField"
        android:layout_gravity="right|top"
        android:layout_alignBottom="@+id/NameLabel"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/PhoneTextField"
        android:layout_alignBottom="@+id/phoneLabel"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone"
        android:id="@+id/phoneLabel"
        android:textSize="35dp"
        android:layout_gravity="left"
        android:layout_below="@+id/emailLabel"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/Save"
        android:background="#bcae31"
        android:layout_marginBottom="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/NameLabel"
        android:clickable="true"
        android:onClick="onSavePress"
        android:layout_alignEnd="@+id/InterestsLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Major"
        android:id="@+id/MajorLabel"
        android:clickable="false"
        android:textSize="35dp"
        android:layout_gravity="right"
        android:layout_below="@+id/phoneLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MajorTextField"
        android:layout_alignTop="@+id/MajorLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/PhoneTextField"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interests:"
        android:id="@+id/InterestLabel"
        android:textSize="35dp"
        android:layout_gravity="right"
        android:layout_below="@+id/MajorTextField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/InterestsLabel"
        android:layout_gravity="left"
        android:height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/InterestLabel"
        android:layout_above="@+id/Save" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User"
        android:id="@+id/UserNameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pass"
        android:id="@+id/PasswordLabel"
        android:layout_below="@+id/UserNameLabel"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:password="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PassTextField"
        android:layout_below="@+id/UserTextField"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
